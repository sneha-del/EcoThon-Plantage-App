<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#BAE3BC"
    tools:context=".Signup">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/fname"
            android:inputType="textPersonName"
            android:paddingLeft="20dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Enter firstname"
            android:fontFamily="@font/acme"
            android:textColorHint="#817070"
            android:drawablePadding="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/box"
            android:layout_marginRight="30dp"></EditText>

        <EditText
            android:id="@+id/name6"
            android:inputType="textPersonName"
            android:layout_below="@id/fname"
            android:paddingLeft="20dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Enter lastname"
            android:fontFamily="@font/acme"
            android:textColorHint="#817070"
            android:drawablePadding="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/box"
            android:layout_marginRight="30dp"></EditText>

        <EditText
            android:id="@+id/dob"
            android:layout_below="@id/name6"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:hint="Select your Date of Birth"
            android:inputType="date"
            android:focusable="false"
            android:fontFamily="@font/acme"
            android:textColorHint="#817070"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/box"
            android:layout_marginRight="30dp"></EditText>

        <EditText
            android:id="@+id/phoneNo"
            android:layout_below="@id/dob"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:hint="Phone Number"
            android:fontFamily="@font/acme"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textColorHint="#817070"
            android:inputType="phone"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/box"
            android:layout_marginRight="30dp"></EditText>

        <EditText
            android:id="@+id/name2"
            android:layout_below="@id/phoneNo"
            android:inputType="textEmailAddress"
            android:drawablePadding="20dp"
            android:layout_width="300dp"
            android:paddingLeft="20dp"
            android:hint="Email Address"
            android:textColorHint="#817070"
            android:fontFamily="@font/acme"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/box"
            android:layout_marginRight="30dp"></EditText>

        <EditText
            android:id="@+id/Password"
            android:layout_below="@id/name2"
            android:inputType="textPassword"
            android:drawablePadding="20dp"
            android:layout_width="300dp"
            android:paddingLeft="20dp"
            android:hint="Password"
            android:textColorHint="#817070"
            android:fontFamily="@font/acme"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/box"
            android:layout_marginRight="30dp"></EditText>

        <EditText
            android:id="@+id/name3"
            android:inputType="text"
            android:layout_below="@id/Password"
            android:paddingLeft="20dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Enter City"
            android:fontFamily="@font/acme"
            android:textColorHint="#817070"
            android:drawablePadding="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/box"
            android:layout_marginRight="30dp"></EditText>

        <EditText
            android:id="@+id/name4"
            android:layout_below="@id/name3"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:hint="Enter State"
            android:inputType="text"
            android:fontFamily="@font/acme"
            android:textColorHint="#817070"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/box"
            android:layout_marginRight="30dp"></EditText>

        <EditText
            android:id="@+id/Email"
            android:layout_below="@id/name4"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:hint="Enter Country"
            android:fontFamily="@font/acme"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:textColorHint="#817070"
            android:inputType="text"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/box"
            android:layout_marginRight="30dp"></EditText>

        <EditText
            android:id="@+id/name5"
            android:layout_below="@id/Email"
            android:drawablePadding="20dp"
            android:paddingLeft="20dp"
            android:hint="Enter Pincode"
            android:inputType="text"
            android:fontFamily="@font/acme"
            android:textColorHint="#817070"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/box"
            android:layout_marginRight="30dp"></EditText>

        <EditText
            android:id="@+id/Locality"
            android:layout_below="@id/name5"
            android:hint="Enter Locality"
            android:drawablePadding="20dp"
            android:inputType="textMultiLine"
            android:fontFamily="@font/acme"
            android:textColorHint="#817070"
            android:paddingLeft="20dp"
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="70dp"
            android:background="@drawable/box"
            android:layout_marginRight="30dp"></EditText>


        <Button
            android:id="@+id/signup"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_below="@id/Locality"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="30dp"
            android:text="SignUp"
            android:fontFamily="@font/acme"
            android:textSize="15sp"
            android:background="@drawable/box1"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="#5F7773"
            android:secondaryProgressTint="@color/black"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent" />
    </RelativeLayout>


</ScrollView>
